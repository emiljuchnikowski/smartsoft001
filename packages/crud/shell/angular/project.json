{
  "name": "crud-shell-angular",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/crud/shell/angular/src",
  "prefix": "smart",
  "tags": ["scope:crud", "type:shell"],
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/crud/shell/angular/**/*.{ts,tsx,js,jsx}",
          "packages/crud/shell/angular/package.json"
        ],
        "tsConfig": [
          "packages/crud/shell/angular/tsconfig.lib.json",
          "packages/crud/shell/angular/tsconfig.spec.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/crud/shell/angular/jest.config.ts",
        "passWithNoTests": true,
        "tsConfig": "packages/crud/shell/angular/tsconfig.spec.json"
      },
      "outputs": ["{workspaceRoot}/coverage/packages/crud/shell/angular"]
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "build": {
      "executor": "@nx/angular:package",
      "options": {
        "tsConfig": "packages/crud/shell/angular/tsconfig.lib.json",
        "project": "packages/crud/shell/angular/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/crud/shell/angular/tsconfig.lib.prod.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx tailwind -c packages/shared/angular/tailwind.config.js -i packages/shared/angular/src/lib/styles.css -o dist/packages/shared/angular/styles.css",
          "npx tailwind -c packages/crud/shell/angular/tailwind.config.js -i packages/crud/shell//angular/src/lib/styles.css -o dist/packages/crud/shell//angular/styles.css"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4401,
        "configDir": "packages/crud/shell/angular/.storybook",
        "browserTarget": "angular:build-storybook",
        "compodoc": false,
        "styles": [
          "packages/crud/shell/angular/src/lib/styles.css",
          "packages/shared/angular/src/lib/styles.css"
        ]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/angular",
        "configDir": "packages/crud/shell/angular/.storybook",
        "browserTarget": "angular:build-storybook",
        "compodoc": false
      }
    }
  }
}
